    "version": "0.2.0",
    "configurations": [
        {
            "name": "vscode-jest-mock-case",
            "type": "node",
            "request": "launch",
            "env": { "NODE_ENV": "test" },
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "stopOnEntry": false,
            "args": [
                "--runInBand",
                "--config=jest.config.js"
            ],
            "runtimeArgs": ["--nolazy"],
            "console": "internalConsole",
            "sourceMaps": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
    ]
}